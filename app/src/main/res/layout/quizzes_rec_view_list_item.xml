<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="160dp"
    android:layout_height="140dp"
    android:layout_margin="5dp"
    android:padding="7dp"
    android:backgroundTint="#8438F1"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:id="@+id/relLayoutEventText"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/textTitle"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Quizz on Verbs an verbs"
                android:textColor="@color/white1"
                android:textStyle="bold"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayoutTimeAndDate"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/relLayoutEventText">

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:text="12 June"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtTime"
                style="@style/textStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"

                android:text="8:30 am"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/relLayoutTimer"
            android:layout_below="@id/relLayoutTimeAndDate">


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtStatus"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="#E53935"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>