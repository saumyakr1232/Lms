<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="160dp"
    android:layout_height="140dp"
    android:layout_margin="5dp"
    android:padding="7dp"
    android:backgroundTint="@color/colorPrimaryDark"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:id="@+id/relLayoutEventText"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Tense Tense Lecture deaial"
                android:textColor="@color/white1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/title"
                android:layout_marginTop="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:id="@+id/relLayoutTimer"
            android:layout_below="@id/relLayoutEventText">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_access_alarm_black_24dp"
                android:layout_marginStart="20dp"
                android:id="@+id/imageTimer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 days left"
                android:id="@+id/timeLeft"
                android:textColor="@color/white1"
                android:layout_toEndOf="@id/imageTimer"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>